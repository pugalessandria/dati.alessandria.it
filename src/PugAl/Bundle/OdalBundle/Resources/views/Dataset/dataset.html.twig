{% extends "::base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12" ng-app="search" ng-controller="AppCtrl" style="position:relative">
            <div butterbar id="butterbar"><span class="glyphicon glyphicon-refresh"></span> Un attimo di pazienza...
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Parole chiave" ng-model="keywords"/>
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button" ng-click="search()">Cerca</button>
                            </span>
                    </div>
                </div>
            </div>

            <div ng-view></div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@PugAlOdalBundle/Resources/public/js/search/scripts/directives/directives.js'
    '@PugAlOdalBundle/Resources/public/js/search/scripts/services/services.js'
    '@PugAlOdalBundle/Resources/public/js/search/scripts/controllers/controllers.js' %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}