<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>

    <title>
        {% block title %}
            {% if title is defined %}
                {{ title }} | dati.alesssandria.it
            {% else %}
                dati.alesssandria.it
            {% endif %}
        {% endblock %}
    </title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
    {% endblock %}

    {% stylesheets '@PugAlOdalBundle/Resources/assets/scss/odal.scss' %}
    <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>

<body>
{% block body %}
    <div id="wrap">
        {% block navigation %}
            <div class="navbar navbar-fixed-top">
                <div class="navbar-inner">
                    <div class="container">
                        <a class="brand" href="/">dati.alessandria.it</a>
                        {{ knp_menu_render('PugAlOdalBundle:Builder:mainMenu', {'nav_type': 'navbar'}) }}
                    </div>
                </div>
            </div>
        {% endblock navigation %}

        <div class="container">

            {% if title is defined %}
                <div class="page-header">
                    <h1>{% block page_title %}{{ title }}{% endblock %}</h1>
                </div>
            {% endif %}

            {% block content %}{% endblock %}
        </div>
        <div id="push"></div>
    </div>

    <div id="footer">
        <div class="container">
            <p class="muted credit">OpenDataAlessandria</p>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ asset('js/jquery.js') }}"><\/script>')</script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>

    {% javascripts '@PugAlOdalBundle/Resources/public/js/vendor/angular.min.js'
    '@PugAlOdalBundle/Resources/public/js/vendor/angular-resource.min.js'
    '@PugAlOdalBundle/Resources/public/js/vendor/angular-route.min.js'
    '@PugAlOdalBundle/Resources/public/js/search/scripts/directives/directives.js'
    '@PugAlOdalBundle/Resources/public/js/search/scripts/services/services.js'
    '@PugAlOdalBundle/Resources/public/js/search/scripts/controllers/controllers.js'%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
</body>
</html>
